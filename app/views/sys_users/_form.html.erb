<%= simple_form_for(@sys_user, :defaults => {:required => false}, 
  html: {id: "sys_user_form",class: "form-horizontal"},
  data: {validate: "parsley"}) do |f| %>

<% if @sys_user.errors.any? %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <i class="fa fa-ban-circle"></i>
      <strong>
      有<%= @sys_user.errors.count %>条错误消息：
      </strong>
      <ul>
      <% @sys_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <section class="panel panel-default">
    <header class="panel-heading">
      <strong>用户信息</strong>
    </header>
    <div class="panel-body">   

      <div class="form-group">
        <div class="col-sm-9">
          <%= f.input :name, :required => true, 
            :class => "input-sm input-s form-control parsley-validated", 
            :input_html => {"data-parsley-length" => "[3,20]"} %> 
        </div>
      </div>


      <%# 如果是新增页面才输入密码 %>
      <% if params[:action]=='new'%>
        <div class="form-group">
          <div class="col-sm-9">
            <%= f.input :password, :as => :password, 
              :class => "input-sm input-s form-control parsley-validated",
              :required => true, :input_html => {"data-parsley-minlength" => "6"} %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-sm-9">
             <%= f.input :password_confirmation, :as => :password,
                  :class => "input-sm input-s form-control parsley-validated",
                  :required => true,
                  :input_html => {"data-parsley-equalto" => "#sys_user_password",
                    "data-parsley-minlength" => "6"} %>
          </div>
        </div>
      <% end %>

      <div class="form-group">
        <div class="col-sm-9">
          <%= f.input :email, :class => "input-sm input-s form-control parsley-validated",
              :input_html => {'data-parsley-type' => 'email'}%> 
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-9">
        <%= f.input :sex, :required => true, :as => :radio_buttons, 
            :collection => [['男','0'] ,['女','1']]%>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-9">
          <%= f.input :phone, :class => "input-sm input-s form-control parsley-validated"%> 
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-9">
          <%= f.input :photo, :class => "input-sm input-s form-control parsley-validated"%> 
        </div>
      </div>
      <br/>
      <div class="form-group">
        <div class="col-sm-9">
          <%= f.button :submit, :class => "btn btn-primary", :value=> "保 存"%>
          <%= button_tag "返回", :type => 'button', :class => "btn btn-default",'onclick' => "history.go(-1)" %>
        </div>
      </div>
    </div>

    <!-- <footer class="panel-footer text-right bg-light lter"></footer> -->
  </section>

<% end %>
<script type="text/javascript">
    $('#sys_user_form').parsley();  
</script>
