<%= form_for(@sys_user,html: {id: "sys_user_form",class: "form-horizontal"},data: {validate: "parsley"}) do |f| %>

<% if @sys_user.errors.any? %>
    <div class="alert alert-danger">
      <button type="button" class="close" data-dismiss="alert">×</button>
      <i class="fa fa-ban-circle"></i>
      <strong>
      有<%= @sys_user.errors.count %>条错误消息：
      </strong>
      <ul>
      <% @sys_user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <section class="panel panel-default">
    <header class="panel-heading">
      <strong>用户信息</strong>
    </header>
    <div class="panel-body">   

      <div class="form-group">
        <label class="col-sm-3 control-label">用户名：</label>
        <div class="col-sm-9">
          <%= f.text_field :name, :required=>"required", :class => "input-sm input-s form-control parsley-validated", 
          "placeholder" => "用户名" , "data-parsley-length" => "[3,20]" %> 
        </div>
      </div>

      <div class="form-group">
        <label for="" class="col-sm-3 control-label">密码:</label>
        <div class="col-sm-9">
           <%= f.password_field :pwd,:placeholder=>"密 码",:class=>"input-sm input-s form-control parsley-validated",
           :required => "required", "data-parsley-minlength" => "6" %>
        </div>
      </div>


    <div class="form-group">
      <label for="" class="col-sm-3 control-label">确认密码:</label>
      <div class="col-sm-9">
         <%= f.password_field :pwd_confirmation, :placeholder=>"确认密码",
              :class => "input-sm input-s form-control parsley-validated",
              :required => "required",
              "data-parsley-equalto" => "#sys_user_pwd", 
              "data-parsley-minlength" => "6" %>
      </div>
    </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">性 别：</label>
        <div class="col-sm-9">
        <%= f.collection_radio_buttons :sex, [["0", '男'] ,["1", '女']], :first, :last do |b| %>
          <span class="i-checks" style="margin-left:10px;float:left;">
            <%=  b.label { b.radio_button + raw('<i></i>') + b.text } %>  
          </span>
        <% end %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">联系方式：</label>
        <div class="col-sm-9">
          <%= f.text_field :phone, :class => "input-sm input-s form-control parsley-validated", "placeholder" => "手机号码或者座机号码"%> 
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-3 control-label">照片：</label>
        <div class="col-sm-9">
          <%= f.text_field :photo, :class => "input-sm input-s form-control parsley-validated", "placeholder" => "...." %> 
        </div>
      </div>
      <br/>
      <div class="form-group">
        <label class="col-sm-3 control-label">&nbsp;</label>
        <div class="col-sm-9">
          <button type="submit" class="btn btn-primary">保 存</button>&nbsp;&nbsp;&nbsp;
          <button type="button" onclick="history.go(-1)" class="btn btn-default">返 回</button>
        </div>
      </div>
    </div>

    <!-- <footer class="panel-footer text-right bg-light lter"></footer> -->
  </section>

<% end %>
<script type="text/javascript">
    $('#sys_user_form').parsley();  
</script>
