<%= simple_form_for(@sys_role, :defaults => {:required => false}, 
  html: {id: "sys_role_form",class: "form-horizontal"},
  data: {validate: "parsley"}) do |f| %>

  <section class="panel panel-default">

    <% if @sys_role.errors.any? %>
      <div class="alert alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        <i class="fa fa-ban-circle"></i>
        <strong>
        有<%= @sys_role.errors.count %>条错误消息：
        </strong>
        <ul>
        <% @sys_role.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <header class="panel-heading">
      <strong>角色信息</strong>
    </header>

    <div class="panel-body">
      <div class="form-group">
        <%=f.label :roleName, :required => true, :class => "col-sm-3 control-label"%>
        <div class="col-sm-9">
          <%= f.text_field :roleName,
            :class => "input-sm input-s form-control parsley-validated", 
            "data-parsley-length" => "[1,50]" %> 
        </div>
      </div>

      <div class="form-group">
        <%=f.label :remark, :class => "col-sm-3 control-label"%>
        <div class="col-sm-9">
          <%= f.text_area :remark, :class => "form-control parsley-validated",
            :style => "width:300px;height:120px;",
            "data-parsley-length" => "[0,255]"%>
        </div>
      </div>

      <br/>
      <div class="form-group">
        <label class="col-sm-3"></label>
        <div class="col-sm-9">
          <%= f.button :submit, :class => "btn btn-primary", :value=> "保 存"%>&nbsp;&nbsp;&nbsp;&nbsp;
          <%= button_tag "返回", :type => 'button', :class => "btn btn-default",'onclick' => "history.go(-1)" %>
        </div>
      </div>
    </div>

    <!-- <footer class="panel-footer text-right bg-light lter"></footer> -->
  </section>

<% end %>
<script type="text/javascript">
    $('#sys_role_form').parsley();  
</script>
